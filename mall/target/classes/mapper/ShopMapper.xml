<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mall.dao.ShopDao">
	
	<select id="queryShopById" resultType="com.example.mall.entity.Shop" parameterType="int">
		select * from tb_shop where shop_id = #{id};
	</select>
	
	<select id="queryShopByProductId" resultType="com.example.mall.entity.Shop" parameterType="int">
		select * from tb_shop shop  
		inner join tb_product product
		on shop.shop_id = product.shop_id
		where product.product_id= #{id};
	</select>
	
	<select id="shopSerach" resultType="com.example.mall.entity.Shop" parameterType="String">
		select * from tb_shop where shop_name like concat(concat('%',#{name}),'%');
	</select>
</mapper>